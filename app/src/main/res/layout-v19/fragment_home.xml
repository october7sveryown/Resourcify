<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="#fff"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="147dp"
        android:background="@color/colorBg"
        android:layout_margin="16dp"
        android:elevation="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@color/colorAction" android:elevation="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
android:textColor="#fff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Choose Transaction"
                android:id="@+id/textchoose"

                android:textSize="18sp"

                android:layout_margin="8dp"
                /></LinearLayout>

        <RadioGroup
            android:layout_width="159dp"
            android:layout_margin="4dp"
            android:layout_height="wrap_content"
            android:layout_gravity="left|bottom"

            android:id="@+id/group1"
            android:checkedButton="@+id/radioButton2">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sales Order"
                android:textSize="14sp"
                android:textColor="#000"
                android:id="@+id/radioButton1" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purchase Order"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/radioButton2" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Both"
                android:textColor="#000"
                android:textSize="14sp"
                android:id="@+id/radioButton3" />
        </RadioGroup>
    </FrameLayout>
     <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorBg"
        android:elevation="8dp"
        android:layout_margin="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp" android:background="@color/colorAction" android:elevation="8dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_margin="8dp"
           android:textColor="#fff"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Decide Duration"
                android:id="@+id/textdate"

                android:textSize="18sp"
                /></LinearLayout>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:textSize="14sp"
            android:id="@+id/editText4"
            android:hint="End Date"
            android:theme="@style/DialogTheme"
            android:layout_margin="8dp"
            android:layout_gravity="left|bottom" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:layout_margin="8dp"
            android:ems="10"
            android:textSize="14sp"
            android:id="@+id/editText3"
            android:hint="Start Date"
            android:theme="@style/DialogTheme"
            android:layout_gravity="left|center_vertical" />

    </FrameLayout>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_margin="16dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Generate Bar Chart"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:textColor="#fff"
        android:elevation="8dp"
        android:layout_marginTop="45dp"
        android:id="@+id/button1"
        android:background="#2cc36b"
        android:layout_gravity="center" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="TIP : Select Duration with 7 days difference for best chart visualization"
        android:textColor="@color/colorSecondaryText"
        android:textSize="12sp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/textDescription" />



</LinearLayout>