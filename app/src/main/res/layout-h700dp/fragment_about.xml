<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.yash.resourcify.activity.AboutFragment"
    android:background="@color/colorAction">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Resourcify"
            android:textColor="#fff"
            android:id="@+id/textTitle"
            android:textSize="40sp"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#fff"
            android:text="Hitachi-Hirel Power Electronics"
            android:id="@+id/textSub"
            android:textSize="20sp"
            android:layout_below="@+id/textFor"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="for"
            android:textColor="#fff"
            android:id="@+id/textFor"
            android:textSize="16sp"
            android:layout_below="@+id/textTitle"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/projection"
            android:layout_marginTop="105dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/textVersion"
            android:layout_alignStart="@+id/textVersion"
            android:id="@+id/imageView2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/version"
            android:textColor="#fff"
            android:textSize="30sp"
            android:id="@+id/textVersion"
            android:layout_marginTop="49dp"
            android:layout_below="@+id/textSub"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</FrameLayout>
